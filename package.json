{
  "name": "stockroom",
  "version": "0.0.1",
  "description": "A system to manage inventory in an imaginary store.",
  "author": "onesword0618 <ao.akua.leo@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon -L",
    "dev:lint": "eslint  src/**/*.ts",
    "dev:fix": "eslint  src/**/*.ts --fix",
    "test": "jest",
    "production:build": "webpack --config ./webpack/production.config.js",
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "check-types": "tsc --noEmit",
    "build": "npm-run-all clean tsc production:build",
    "start": "npm run build && node dist/server.js",
    "lint": "npm-run-all dev:fix check-types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onesword0618/stockroom.git"
  },
  "keywords": [
    "sample"
  ],
  "bugs": {
    "url": "https://github.com/onesword0618/stockroom/issues"
  },
  "homepage": "https://github.com/onesword0618/stockroom#readme",
  "dependencies": {
    "dotenv": "^12.0.4",
    "express": "^4.17.2",
    "express-generator": "^4.16.1",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/mysql": "^2.15.20",
    "@types/node": "^17.0.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-jest": "^27.4.5",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.4",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "supertest": "^6.1.6",
    "tree-kill": "^1.2.2",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "bash -c tsc --noEmit"
    ]
  }
}
