{
  "name": "stockroom",
  "version": "0.0.1",
  "description": "A system to manage inventory in an imaginary store.",
  "author": "onesword0618 <ao.akua.leo@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon -L",
    "dev:fix": "eslint  src/**/*.ts --fix",
    "test": "jest --ci --reporters=default --reporters=jest-junit --testResultsProcessor=jest-junit",
    "production:build": "webpack --config ./webpack/production.config.js",
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "check-types": "tsc --noEmit",
    "build": "npm-run-all clean tsc production:build",
    "lint": "eslint --ext .js,.ts src/*",
    "start": "npm run build && node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onesword0618/stockroom.git"
  },
  "keywords": [
    "sample"
  ],
  "bugs": {
    "url": "https://github.com/onesword0618/stockroom/issues"
  },
  "homepage": "https://github.com/onesword0618/stockroom#readme",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "http-status-codes": "^2.2.0",
    "mysql2": "^2.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-jest": "^27.4.6",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "jest-junit": "^13.0.0",
    "lint-staged": "^12.2.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "supertest": "^6.2.2",
    "tree-kill": "^1.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": ".",
    "outputName": "junit.xml",
    "uniqueOutputName": "false",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  }
}
